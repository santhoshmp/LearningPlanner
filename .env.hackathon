# AI Study Planner - Hackathon Environment Configuration
# This minimal configuration allows the app to run without external API keys

# Application Environment
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# Database Configuration (Railway will auto-provide DATABASE_URL)
# DATABASE_URL will be automatically set by Railway
# For local testing: DATABASE_URL=postgresql://user:pass@localhost:5432/dbname

# Authentication & Security
JWT_SECRET=hackathon_jwt_secret_2024_secure_key_for_demo
JWT_REFRESH_SECRET=hackathon_refresh_secret_2024_secure_key_for_demo

# CORS Configuration (allow all origins for demo)
CORS_ORIGIN=*
FRONTEND_URL=*

# Email Configuration (optional - app works without it)
EMAIL_FROM=noreply@aistudyplanner.com
# SENDGRID_API_KEY=optional_for_email_features

# AI API Keys (optional - app has fallback mechanisms)
# ANTHROPIC_API_KEY=optional_for_ai_features
# GEMINI_API_KEY=optional_for_ai_features

# OAuth Configuration (optional - app works without social login)
OAUTH_ENCRYPTION_KEY=hackathon_oauth_key_32_chars_minimum_length

# Development Email Testing (optional)
ETHEREAL_USER=demo@ethereal.email
ETHEREAL_PASS=demo_password

# Redis Configuration (Railway will auto-provide if needed)
# REDIS_URL will be automatically set by Railway if Redis is added

# Performance & Monitoring
CLAUDE_RATE_LIMIT_POINTS=10
CLAUDE_RATE_LIMIT_DURATION=60
CLAUDE_MAX_TOKENS=1024

# Content Safety (uses built-in filters)
CONTENT_SAFETY_ENABLED=true

# Demo Mode Settings
DEMO_MODE=true
ENABLE_MOCK_DATA=true